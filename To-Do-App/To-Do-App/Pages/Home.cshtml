@page
@model To_Do_App.Pages.HomeModel
@{ ViewData["Title"] = "Home";
    Layout = null; }

<a asp-page="./AddToDo">Add ToDo</a>

<br />
<br />

<h1>ToDo List</h1>

    @for (int i = 0; i < Model.Items.Count; i++)
    {
        int index = i + 1;
        <td>@index.  </td>
                <td>Name: </td>
                <td name="Name">
                    @Html.DisplayFor(modelItem => Model.Items.ElementAt(i).Name)<br />
                </td>
                <td>Description: </td>
                <td name="Descrip">
                    @Html.DisplayFor(modelItem => Model.Items.ElementAt(i).Descrip)<br />
                </td>

                <a asp-page="./AddToDo" asp-route-id="@Model.Items.ElementAt(i).Id">Edit</a>
                <td><input type="submit" value="Mark as Done" asp-page-handler="Submit"/></td>
        <br />
        <br />
    }

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
